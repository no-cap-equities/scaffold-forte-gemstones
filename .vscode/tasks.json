                "close": false,
                "group": "build-main",
                "showReuseMessage": false
            },
        },
        {
            "label": "Frontend UI",
            "command": "yarn start",
            "runOptions": {
                "instanceLimit": 1
            },
            "type": "shell",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "build-main",
                "close": false,
            },
            "icon": {
                "id": "screen-full",
                "color": "terminal.ansiCyan"
            }
        },
        {
            "label": "Delay Start",
            "hide": true,
            "type": "shell",
            "detail": "Sleep for 10s",
            "icon": {
                "id": "clock",
                "color": "terminal.ansiYellow"
            },
            "command": "for i in $(seq ${SLEEP_SECONDS:-10} -1 1); do echo -ne \"\\r Waiting for Anvil chain to start... $i \"; sleep 1; done; echo -e \"\\nDone waiting!\"",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "build-main",
                "showReuseMessage": false
            }
        },
        {
